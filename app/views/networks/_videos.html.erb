<h4>Features:</h4>
<% unless @videos.blank? %>
  <table class="table">
    <tr>
      <th>Video</th>
      <th>Unique Impressions</th>
      <th>Impressions</th>
      <th>Unique Plays</th>
      <th>Plays</th>
      <th>Royalties</th>
    </tr>

    <% @videos.each do |v| %>
      <tr>
        <td><%= link_to_video v %></td>
        <td><%= @network.count_impressions(v) %></td>
        <td><%= @network.count_impressions(v, all: true) %></td>
        <td><%= @network.count_plays(v) %></td>
        <td><%= @network.count_plays(v, all: true) %></td>
        <td></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>This network has no video features</p>
<% end %>