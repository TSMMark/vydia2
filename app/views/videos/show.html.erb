<div class="row">
  <div class="span12">
    <h2><%= link_to @video.name, @video.link, target: :_blank %></h2>
  </div>
</div>

<div class="row">
  <div class="info-column">
    <label>Bid CPM:</label> <%= Money.new(@video.cpm).with_symbol %>
  </div>

  <div class="info-column">
    <label>YT Rating:</label> <%= @video.yt_rating.round(2) %> / 100
  </div>

  <div class="info-column">
    <label>YT Views:</label> <%= @video.yt_view_count %>
  </div>

  <div class="info-column">
    <label>YT Token:</label> <%= @video.token %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <%= @video.thumb_element_hover thumb: {link_to: :player} %>
  </div>
</div>

<h3>Featured on:</h3>
<%= render 'networks' %>

<h3>Generate Embed Code</h3>
<div>
  <%= render 'generate_embed' %>
</div>

<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>
